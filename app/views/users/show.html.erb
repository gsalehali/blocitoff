<div class="row user-info">
  <div class="col-md-4 pull-left avatar-pic">
    <%= image_tag(@user.avatar.profile.url) if @user.avatar? %>
  </div>
  <div class="col-md-8">
    <h3 class="user-info-heading"><%= @user.name %></h3>  
  </div>
  <div class="col-md-8 user-info-email">
    <small>
      <%= @user.email %>
    </small>
  </div>
</div>
<hr>
<div class="table-responsive">
  <table class="table table-striped table-border" id="items-table">
    <tbody>
      <%= render partial: "items/item", collection: @items %>
    </tbody>
  </table>
</div>
<div id="new-item">
  <%= render partial: "items/form" %>
</div>