<div class="row user-info">
  <div class="col-md-1 pull-left avatar-pic">
    <%= image_tag(@user.avatar.profile.url) if @user.avatar? %>
  </div>
  <div class="col-md-8 user-info-heading">
    <h4><%= @user.name %></h4>  
  </div>
  <div class="col-md-8 user-info-email">      
    <%= @user.email %>
  </div> 
</div>
<hr>

<%= render partial: "items/form" %>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead class="thead-inverse">
      <tr>
        <th>Task/item</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <%= render partial: "items/item", locals:{item: item} %>
      <% end %>
    </tbody>
  </table>
</div>

